@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/agenda.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon32.ico" />
</head>
<body>
    <header style="background-color:#43054e">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="CentroAtendimento" asp-action="Index" style="transform: scale(1.7);">
                    <img src="~/imagens/marca ceub versao negativa lilas.png" width="50px" id="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (Context.Session.GetString("User") != null)
                    {
                         <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-white " asp-area="" asp-controller="CentroAtendimento" asp-action="Index">Página Inicial</a>
                                </li>
                            @if (bool.Parse(Context.Session.GetString("IsAdmin") ?? "false"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Teste">Teste</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" style="color: #F2F3F5; margin-left: -160px; ">Seja bem-vindo(a) @Context.Session.GetString("User") </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-white " asp-area="" asp-controller="Usuario" asp-action="Logout">
                                    Sair
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white " asp-area="" asp-controller="CentroAtendimento" asp-action="Index">Página Inicial</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Login">
                                    Logar/Registrar
                                    <img src="~/Imagens/iconuser.png" width="35px" id="userIcon" />
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center footer text-muted">
        <div class="container">
            &copy; 2023 - CEUB
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
