@model List<OutroTeste.Models.Especialidade>

<!DOCTYPE html>
<html>
<head>
    <title>Especialidades</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="d-flex flex-wrap">
            <div class="m-1 w-100 text-center">
                <h4 style="color:#bf0085">@ViewBag.CentroAtendimentoNome</h4>
                <br />
                <br />
                <h2 style="color:#43054e">Selecione a Especialidade</h2>
            </div>
            @foreach (var especialidade in Model)
            {
                <div class="d-flex m-1 container" style="flex: 1;">
                    <a class="btn btn-primary btn-block" href="@Url.Action("Servicos", "CentroAtendimento", new { id = especialidade.idEspecialidade })">@especialidade.nmEspecialidade</a>
                </div>
            }
        </div>
    </div>
    <div class="text-center mt-3">
        <a class="btn btn-secondary" href="javascript:history.back()">Voltar</a>
    </div>
</body>
</html>