@{
    ViewData["Title"] = "AgendaCAC - Login";
}
@if (ViewData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @ViewData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-success">
        @ViewData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" asp-append-version="true">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="wrapper">
    <form action="">
        <h1>Login</h1>
        <div class="input-box">
            <input type="text" placeholder="Usuario" required />
            <box-icon type='solid' name='user'></box-icon>
        </div>
        <div class="input-box">
            <input type="password" placeholder="Senha" required />
            <box-icon name='lock-alt' type='solid'></box-icon>
        </div>

        <div class="remember-forgot">
            <label><input type="checkbox" />Lembrar de mim</label>
            <a href="@Url.Action("EsquecerSenha", "Usuario")">Esqueceu a senha?</a>
        </div>

        <button type="submit" class="btn-login">Logar</button>
        <div class="criar-conta">
            <p>Não tem uma conta?<a href="@Url.Action("CriarConta", "Usuario")">  Registre-se</a></p>
        </div>
    </form>
</div>
