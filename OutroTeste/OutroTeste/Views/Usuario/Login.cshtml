@model agenda.Models.Login

@{
    ViewData["Title"] = "AgendaCAC - Login";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" asp-append-version="true">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="wrapper">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" style="text-align: center;">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" style="text-align: center;">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form asp-action="Logar" asp-controller="Usuario" method="post">
        <h1>Login</h1>
        <div class="input-box">
            <input asp-for="Usuario" />
            @Html.ValidationMessageFor(x => x.Usuario)
        </div>
        <div class="input-box">
            <input type="password" asp-for="Senha" id="Senha"/>
            @Html.ValidationMessageFor(x => x.Senha)
        </div>

        <div class="remember-forgot" style="padding-top: 10px;">
            <label><input type="checkbox" id="showPasswordCheckbox" /> Mostrar senha</label>
            <a href="@Url.Action("EsquecerSenha", "Usuario")">Esqueceu a senha?</a>
        </div>

        <button type="submit" class="btn-login">Logar</button>
        <div class="criar-conta">
            <p>Não tem uma conta?<a href="@Url.Action("CriarConta", "Usuario")">  Registre-se</a></p>
        </div>
    </form>
</div>

<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('Senha');
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }

    // Adiciona um ouvinte de eventos ao checkbox
    document.getElementById('showPasswordCheckbox').addEventListener('click', togglePasswordVisibility);
</script>